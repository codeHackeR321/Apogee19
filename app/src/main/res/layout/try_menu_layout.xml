    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/sh_rounded_rectangle_8dp_white_bg"

            app:srcCompat="@drawable/ic_shopping_cart"
            android:id="@+id/buttonCart" android:layout_marginTop="12dp"
            app:layout_constraintTop_toTopOf="@+id/guidelinehorizontal"/>
    <androidx.constraintlayout.widget.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_begin="50dp"
            android:id="@+id/guidelinehorizontal"/>
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="16dp"
        app:layout_constraintTop_toTopOf="@id/rootPOV"
        app:layout_constraintBottom_toBottomOf="@id/rootPOV"
        app:layout_constraintStart_toStartOf="@id/rootPOV"
        app:layout_constraintEnd_toEndOf="@id/rootPOV"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="24dp"
        android:id="@+id/cardViewCart"
        android:visibility="invisible"
        android:layout_marginBottom="120dp"
        android:background="@drawable/sh_rounded_rectangle_16dp">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/cartLayout">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/cartLayout"
        android:src="@drawable/ic_shopping_cart"
        android:id="@+id/imageViewCart"
        android:background="@drawable/sh_rounded_rectangle_8dp_white_bg"
        app:layout_constraintStart_toStartOf="@id/cartLayout"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="CART"
        app:layout_constraintTop_toTopOf="@id/cartLayout"
        app:layout_constraintStart_toEndOf="@id/imageViewCart"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:textColor="#FF7979"
        android:fontFamily="@font/google_sans_bold"
        android:padding="4dp"/>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_close"
        app:layout_constraintTop_toTopOf="@id/cartLayout"
        app:layout_constraintEnd_toEndOf="@id/cartLayout"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/sh_rounded_rectangle_08dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/recyViewCart"
        app:layout_constraintStart_toStartOf="@id/cartLayout"
        app:layout_constraintEnd_toEndOf="@id/cartLayout"
        app:layout_constraintTop_toBottomOf="@id/imageViewCart"
        app:layout_constraintBottom_toTopOf="@id/textViewTotal"
        android:layout_marginTop="24dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="0dp"
        >

    </androidx.recyclerview.widget.RecyclerView>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Total: Rs. 1000"
        app:layout_constraintEnd_toEndOf="@id/cartLayout"
        app:layout_constraintStart_toStartOf="@id/cartLayout"
        android:textSize="24sp"
        android:id="@+id/textViewTotal"
        android:textColor="#4E2E6D"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@id/buttonPay"
        app:layout_constraintTop_toBottomOf="@id/recyViewCart"
        android:padding="8dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonPay"
        android:text="Pay"
        app:layout_constraintBottom_toBottomOf="@id/cartLayout"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/textViewTotal"
        app:layout_constraintStart_toStartOf="@id/cartLayout"
        app:layout_constraintEnd_toEndOf="@id/cartLayout"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/google_sans_medium"
        android:textSize="24sp"
        android:background="@drawable/sh_rounded_rectangle_8dp_orange_bg"
        android:textColor="#FFFFFF"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <androidx.recyclerview.widget.RecyclerView

            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/recyViewMenu"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:layout_marginTop="96dp" app:layout_constraintTop_toTopOf="@+id/guidelinehorizontal"
            android:layout_width="0dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout

        android:id="@+id/linearViewMenuItems"
        android:layout_width="0dp"
        android:layout_height="0dp"
         android:layout_marginStart="16dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="-26dp"
        android:background="@drawable/sh_top_half_rounded_rectangle_16dp_white_bg"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guidelinehorizontal"
        app:layout_constraintVertical_bias="0.84">


        <TextView
            android:id="@+id/textStallNAme"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="0dp"
            android:ellipsize="end"
            android:fontFamily="@font/google_sans_medium"
            android:lines="1"
            android:padding="14dp"
            android:text="Dassi De ParontheJassi de "
            android:textAlignment="center"
            android:textColor="@color/vio07"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@id/linearViewMenuItems"
            app:layout_constraintEnd_toEndOf="@id/linearViewMenuItems"
            app:layout_constraintStart_toEndOf="@id/backButton"
            app:layout_constraintTop_toTopOf="@id/linearViewMenuItems"
            app:layout_constraintVertical_bias="0.0" />

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"

            android:background="@drawable/sh_rounded_rectangle_8dp_white_bg"
            android:padding="16dp"
            app:srcCompat="@drawable/ic_back"
            app:layout_constraintBottom_toTopOf="@+id/recyViewMenuItems"
            app:layout_constraintEnd_toStartOf="@id/textStallNAme"

            app:layout_constraintStart_toStartOf="@+id/linearViewMenuItems"
            app:layout_constraintTop_toTopOf="@id/linearViewMenuItems"
            app:layout_constraintVertical_bias="1.0" />


        <androidx.recyclerview.widget.RecyclerView

            android:id="@+id/recyViewMenuItems"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textStallNAme"
            app:layout_constraintVertical_bias="1.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>