<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootPOV"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/picIMG"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
            android:id="@+id/nameLBL"
            android:layout_width="253dp"
            android:layout_height="35dp"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/google_sans_medium"
            android:textColor="@color/yel02"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/picIMG"
            app:layout_constraintTop_toTopOf="@+id/picIMG"
            tools:text="Nishant Mahajan"/>

    <TextView
            android:id="@+id/roleLBL"
            android:layout_width="256dp"
            android:layout_height="31dp"
            android:fontFamily="@font/google_sans_medium"
            android:textColor="@color/blk01"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/nameLBL"
            app:layout_constraintTop_toBottomOf="@+id/nameLBL"
            tools:text="App and Online Payments" android:layout_marginTop="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>